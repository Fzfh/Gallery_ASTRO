---
const links = [
  { name: "Home", href: "/" },
  { name: "Tentang", href: "/tentang" },
  { name: "Proyek", href: "/proyek" },
  { name: "Kontak", href: "/kontak" },
];
---

<nav style={{
  display: 'flex',
  justifyContent: 'space-between',
  alignItems: 'center',
  background: '#6a0dad',
  padding: '1rem 2rem',
  color: '#fff',
  fontFamily: 'Poppins, sans-serif',
}}>
  <h1 style="font-size: 1.4rem; font-weight: 600;">AuraSite</h1>

  <ul style={{
    listStyle: 'none',
    display: 'flex',
    gap: '1.5rem',
    margin: 0,
    padding: 0,
  }}>
    {links.map(link => (
      <li>
        <a href={link.href} style={{
          color: 'white',
          textDecoration: 'none',
          fontWeight: 500,
          transition: '0.2s',
        }} onmouseover="this.style.opacity='0.7'" onmouseout="this.style.opacity='1'">
          {link.name}
        </a>
      </li>
    ))}
  </ul>
</nav>
